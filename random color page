<!DOCTYPE html>
<html lang="en">
  <head>
    <style>
      .box {
        display: flex;
        flex-direction: column;
        margin: 10px;
        height: 100vh;
        align-items: center;
        justify-content: center;
      }
      #btn {
        background-color: #4caf50; /* Green */
        border: none;
        color: white;
        padding: 20px;
        text-align: center;
        font-size: 30px;
        cursor: pointer;
        border-radius: 33% 53%;
        margin-top: 30px;
        box-shadow: 0 8px 16px 0 rgba(0, 0, 0);
      }
      #btn:hover {
        transform: scale(1.1);
        transition: 0.6s ease;
        opacity: 0.8;
      }
      #btn:active {
        background-color: #e74c3c;
        box-shadow: inset -2px -2px 9px rgb(0, 0, 0);
        border-radius: 33% 53%;
      }
      h1 {
        font-size: 44px;
        font-family: Verdana, Geneva, Tahoma, sans-serif;
        letter-spacing: 0.1em;
        color: #8c5f05;
      }
    </style>
    <title>Random colour</title>
  </head>
  <body>
    <div class="box">
      <h1>Random color program</h1>
      <div>
        <button id="btn">Tap me to change colour</button>
      </div>
    </div>
    <script>
      const btn = document.querySelector("#btn");
      const randomcolor = () => {
        //arrow function

        let r = Math.floor(Math.random() * 256);
        let g = Math.floor(Math.random() * 256);
        let b = Math.floor(Math.random() * 256);
        return "rgb(" + r + "," + g + "," + b + ")";
      };

      function changerandomcolor() {
        document.body.style.background = randomcolor();
      }
      btn.addEventListener("click", changerandomcolor);
      // be carefull while using event listeners and don't include parenthese in function.
    </script>
  </body>
</html>
<!-- This line generates a random decimal number between 0 (inclusive) and 1 (exclusive) using Math.random(). Multiplying it by 256 gives us a number between 0 and 255. Math.floor() is then used to round down this value to the nearest integer. -->
